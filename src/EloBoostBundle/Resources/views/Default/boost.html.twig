{% extends "EloBoostBundle:Default:Layout.html.twig" %}
{% block Title %}EloBoostTN | Boosting{% endblock %}
{% block body %}
<div class="container-fluid">
    <div class="row">
<form action="{{ path('elo_boost_boost') }}" method="post" class="form">
    <div class="row">
        <label class="control-label">From : </label>
    </div>
    <br>
    <div class="row">
        <div class="col-xs-2 col-md-2">
            <select name="FROMLP" class="selectpicker form-control">
                <option value="0-20" selected>0-20 LP</option>
                <option value="20-40">20-40 LP</option>
                <option value="40-60">40-60 LP</option>
                <option value="60-80">60-80 LP</option>
                <option value="80-100">80-100 LP</option>
            </select>
        </div>
        <div class="col-xs-2 col-md-2">
            <select name="FROMDIV" class="selectpicker form-control">
                <option value="Division V" selected>Division V</option>
                <option value="Division IV">Division IV</option>
                <option value="Division III">Division III</option>
                <option value="Division II">Division II</option>
                <option value="Division I">Division I</option>
            </select>
        </div>
        <div class="col-xs-2 col-md-2">
            <select name="FROMLG" class="selectpicker form-control">
                <option value="Bronze" selected>Bronze</option>
                <option value="Silver">Silver</option>
                <option value="Gold">Gold</option>
                <option value="Platinum">Platinum</option>
                <option disabled >Diamond</option>
            </select>
        </div>
    </div>
    <br>
    <div class="row">
        <label class="control-label">To : </label>
    </div>
    <div class="row">
        <br>
        <div class="col-xs-2 col-md-2">
            <select name="TODIV" class="selectpicker form-control">
                <option value="Division V" selected>Division V</option>
                <option value="Division IV">Division IV</option>
                <option value="Division III">Division III</option>
                <option value="Division II">Division II</option>
                <option value="Division I">Division I</option>
            </select>
        </div>
        <div class="col-xs-2 col-md-2">
            <select name="TOLG" class="selectpicker form-control">
                <option value="Bronze" selected>Bronze</option>
                <option value="Silver">Silver</option>
                <option value="Gold">Gold</option>
                <option value="Platinum">Platinum</option>
                <option disabled >Diamond</option>
            </select>
        </div>
        <div class="col-xs-2 col-md-2">
            <button type="submit" class="btn btn-block btn-primary">Boost Me !</button>
        </div>
    </div>
</form>
</div>
</div>
{% endblock body %}
